<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login - Inventario INA</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: Arial, sans-serif;
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      background: #f0f2f5; /* color de fondo neutro */
    }

    .login-container {
      background: #fff;
      padding: 30px 20px;
      border-radius: 15px;
      box-shadow: 0 6px 25px rgba(0,0,0,0.4);
      width: 100%;
      max-width: 400px;
      text-align: center;
    }

    .login-container img {
      width: 120px;
      height: auto;
      margin-bottom: 20px;
    }

    h1 {
      margin-bottom: 20px;
      color: #333;
      font-size: 1.8rem;
    }

    form {
      display: flex;
      flex-direction: column;
      text-align: left;
    }

    label {
      margin-bottom: 5px;
      font-weight: bold;
      color: #555;
    }

    input {
      padding: 12px;
      border-radius: 8px;
      border: 1px solid #ccc;
      margin-bottom: 15px;
      font-size: 1rem;
      transition: border-color 0.2s;
    }

    input:focus {
      border-color: #007bff;
      outline: none;
    }

    button {
      background: #007bff;
      color: white;
      padding: 12px;
      border: none;
      border-radius: 8px;
      font-size: 1rem;
      cursor: pointer;
      transition: background 0.3s, transform 0.2s;
    }

    button:hover {
      background: #0056b3;
      transform: scale(1.03);
    }

    p.error {
      color: red;
      margin-bottom: 15px;
      font-size: 0.95rem;
      text-align: center;
    }

    /* Media Queries */
    @media (max-width: 768px) {
      .login-container {
        padding: 25px 15px;
      }
      h1 {
        font-size: 1.6rem;
      }
      input, button {
        font-size: 0.95rem;
      }
      .login-container img {
        width: 100px;
      }
    }

    @media (max-width: 480px) {
      .login-container {
        padding: 20px 10px;
        border-radius: 10px;
      }
      h1 {
        font-size: 1.4rem;
      }
      input, button {
        font-size: 0.9rem;
        padding: 10px;
      }
      .login-container img {
        width: 80px;
      }
    }
  </style>
</head>
<body>
  <div class="login-container">
    <!-- Imagen centrada -->
    <img src="/imagenes/n2.jpg" alt="Logo Inventario INA">

    <h1>Iniciar sesión</h1>

    <% if (typeof error !== 'undefined' && error) { %>
      <p class="error"><%= error %></p>
    <% } %>

    <form action="/login" method="POST">
      <label for="usuario">Usuario:</label>
      <input type="text" name="usuario" required placeholder="Ingrese su usuario">

      <label for="contrasena">Contraseña:</label>
      <input type="password" name="contrasena" required placeholder="Ingrese su contraseña">

      <button type="submit">Entrar</button>
    </form>
  </div>
</body>
</html>
